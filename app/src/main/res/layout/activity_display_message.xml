<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMessageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whatsapp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.android.myapplication.MainActivity">
            <!--            Light Yellow Color-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l1"
                tools:ignore="MissingConstraints">
                <!--Light Pink Color-->

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="40dp"
                    android:text="NAME"
                    android:textSize="30dp"
                    tools:text="NAME"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l1"
                android:id="@+id/l2"
                tools:ignore="MissingConstraints"
                >
                <!--Light Blue Color-->



                <TextView
                    android:id="@+id/dob1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="246dp"
                    tools:layout_editor_absoluteY="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l2"
                android:id="@+id/line3"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="243dp"
                    tools:layout_editor_absoluteY="136dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/line3"
                android:id="@+id/l4"
                tools:ignore="DuplicateIds,MissingConstraints,UnknownId">



                <TextView
                    android:id="@+id/city1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="243dp"
                    tools:layout_editor_absoluteY="197dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"
                    tools:text="CITY" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l4"
                android:id="@+id/l5"
                tools:ignore="MissingConstraints">


                <TextView
                    android:id="@+id/pincode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PINCODE"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="246dp"
                    tools:layout_editor_absoluteY="269dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l5"
                android:id="@+id/l6"
                tools:ignore="DuplicateIds,MissingConstraints,UnknownId">


                <TextView
                    android:id="@+id/mobile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="345dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l6"
                android:id="@+id/l7"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="404dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l7"

                android:id="@+id/l8"
                tools:ignore="DuplicateIds,MissingConstraints,UnknownId">

                <TextView
                    android:id="@+id/interest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTEREST"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="246dp"
                    tools:layout_editor_absoluteY="485dp"
                    tools:text="INTEREST"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l8"
                android:id="@+id/l9"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="537dp"
                    tools:text="PROFILE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l9"
                android:id="@+id/l10"
                tools:ignore="DuplicateIds,MissingConstraints,UnknownId">
                <TextView
                    android:id="@+id/experience1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPERIENCE"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="615dp"
                    tools:text="EXPERIENCE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>